<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <size
                        android:width="1dp"
                        android:height="1dp"/>
                    <!--边框角度-->
                    <corners android:radius="10dip" />
                    <!--外边框颜色-->
                    <solid android:color="#8069ADF1" />
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape android:shape="oval">
                    <size
                        android:width="1dp"
                        android:height="1dp"/>
                    <!--边框角度-->
                    <corners android:radius="10dip" />
                    <!--外边框颜色-->
                    <solid android:color="#80D7ECFF" />
                </shape>
            </item>
        </selector>
    </item>

    <item>
        <shape android:shape="oval">
            <size
            android:height="80dp"
            android:width="80dp"/>
            <!--边框角度-->
            <corners android:radius="10dip" />
            <!--外边框颜色，这个为内部颜色-->
            <solid android:color="#80D7ECFF"/>

        </shape>
    </item>
</layer-list>